  "main": "dist/electron.js",
  "type": "module",
  "homepage": "./",
  "scripts": {
    "start": "vite",
    "clean": "rimraf dist",
    "electron:compile": "npm run clean && tsc -p tsconfig.electron.json && npm run copy-assets",
    "electron:serve": "npm run electron:compile && npm run electron:start",
    "electron:start": "concurrently -k \"npm:start\" \"wait-on tcp:3000 && electron-forge start\"",
    "copy-assets": "cp -R assets dist/"
  },
